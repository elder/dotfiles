#      Autor: Elder Marco <eldermarco@gmail.com>
#       Data: Seg 03 Set 2012 21:22:21 BRT
# Modificado: Seg 03 Set 2012 22:15:08 BRT

# Se um arquivo foi baixado parcialmente, esta opção irá fazer com que o
# download comece exatamente do ponto onde o outro havia parado.
continue = on

# Tenta utilizar a mesma data de modificação do arquivo no servidor, caso este
# a disponibilize.
timestamping = on

# Número de tentativas antes de desistir do download
tries = 3

# Tenta fazer o download novamente, ainda que a conexão tenha sido recusada.
retry_connrefused = on

# Faz o wget se identificar como firefox. Esta opção é útil quando algum site
# permite o download de arquivos somente a partir de um navegador.
user_agent = 'Mozilla/5.0 (X11; Linux x86_64; rv:15.0) Gecko/20100101 Firefox/15.0'

